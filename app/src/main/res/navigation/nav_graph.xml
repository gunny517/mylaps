<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/ActivitiesFragment">

	<fragment
		android:id="@+id/ActivitiesFragment"
		android:name="jp.ceed.android.mylapslogger.ActivitiesFragment"
		android:label="@string/activities_fragment_label"
		tools:layout="@layout/fragment_activities">

		<action
			android:id="@+id/action_ActivitiesFragment_to_LoginFragment"
			app:destination="@id/LoginFragment" />

		<action
			android:id="@+id/action_ActivitiesFragment_to_PracticeResultsFragment"
			app:destination="@id/PracticeResultFragment"/>
	</fragment>

	<fragment
		android:id="@+id/LoginFragment"
		android:name="jp.ceed.android.mylapslogger.LoginFragment"
		android:label="@string/login_fragment_label"
		tools:layout="@layout/fragment_login">

		<action
			android:id="@+id/action_LoginFragment_to_ActivitiesFragment"
			app:destination="@id/ActivitiesFragment" />
	</fragment>

	<fragment
		android:id="@+id/PracticeResultFragment"
		android:name="jp.ceed.android.mylapslogger.PracticeResultsFragment"
		tools:layout="@layout/fragment_practice_result">

		<argument
			android:name="sessionId"
			app:argType="integer"
			app:nullable="false"/>
	</fragment>
</navigation>